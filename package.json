        "jest": "^29.7.0",
        "jszip": "^3.10.1",
        "openpgp": "^5.10.2",
        "pouchdb": "^8.0.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "web3": "^4.1.2"
    },
    "bin": {
        "seguro-gateway": "./build/index.js"
    }
