        "uuid": "^9.0.1",
        "yargs": "^17.7.2",
        "hexdump-nodejs":"^0.1.0"
    },
    "devDependencies": {
        "@types/async": "^3.2.21",
        "@types/express": "^4.17.18",
        "@types/fs-extra": "^11.0.2",
        "@types/jest": "^29.5.5",
        "@types/node": "^20.7.1",
        "@types/pouchdb": "^6.4.0",
        "@types/uuid": "^9.0.4",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "eslint": "^8.50.0",
        "eslint-config-airbnb-base": "^15.0.0",
